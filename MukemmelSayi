public class Main {

	public static void main(String[] args) {
		// Mükemmel Sayiyi Bulma 
	int sayiSec = 28;
	int toplam = 0;
	int sayiIkiKati = sayiSec * 2;
	for (int i = 1; i < sayiSec; i++) {
		
		if(sayiSec % i ==0) { 	
			toplam=toplam+i;	
			
	}
}

	if(sayiIkiKati==toplam+sayiSec) {
		
		System.out.println(sayiSec+" bir mükemmel sayıdır.");	
	} else {
		
		System.out.println(sayiSec+" bir mükemmel sayı değildir.");	
	}
	
	

	}

}
